{
  "compilerOptions": {
    "module": "NodeNext",
    "noEmit": true,
    "declaration": false,
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src", "./*.ts", "./*.js"]
}
